<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiền tệ gốc -->
    <TextView
        android:id="@+id/txtCurrencySymbol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtAmount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="0" />

    <Spinner
        android:id="@+id/spinnerCurrency1"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:entries="@array/currencies1" />

    <TextView
        android:id="@+id/txtCurrencySymbol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edtAmount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="0" />


    <Spinner
        android:id="@+id/spinnerCurrency2"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:entries="@array/currencies1" />

    <TextView
        android:id="@+id/txtExchangeRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center" />

</LinearLayout>
